<h1>Welcome to the Burger Devouring Factory</h1>

<div class="laterburger">
<ul>
  {{#each burger}}
  {{#unless devoured}}
  {{> burger-block devoured=false}}
  {{/unless}}
  {{/each}}

</ul>
</div>

<div class="devouredburger">
<ul>
  {{#each burger}}
  {{#if devoured}}
  {{> burger-block devoured=true}}
  {{/if}}
  {{/each}}
</ul>
</div>

<div class="burgerform">
<h2>Add a Burger</h2>
<form id="create-form">

  <div class="form-group">
    <label for="ca"></label>
    <textarea type="text" id="ca" name="name" placeholder="Enter the name of your dream burger"></textarea>
  </div>

{{!-- If want to add the option of devouring now/later --}} 
     <div class="form-group">
    <label for="devour">Devour?</label><br>
    <input type="radio" name="devoured" value="1" id="devoured"> Devour Now<br>
    <input type="radio" name="devour" value="0" id="devour"> Devour Later
  </div>

  <button class="submit" type="submit">Add Burger</button>
</form>
</div>
